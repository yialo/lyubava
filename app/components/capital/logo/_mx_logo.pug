mixin logo()
  - const location = attributes.location;
  div(class=setModifiers('logo', [location]))
    - const baseWidth = ({ header: 196, footer: 202 });
    a.logo__link(href=($pageId === 'index' ? null : 'index.html'))
      +s-picture().logo__picture(
        alt=$pageHeading,
        path='logo__image',
        ext='png',
        media-set=[['lg', 264], baseWidth[location]],
      )
      if $pageId === 'index'
        h1.s-visually-hidden.logo__headline= $pageHeading

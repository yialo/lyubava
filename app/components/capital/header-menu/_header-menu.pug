.header-menu
  .row.header-menu__list
    -
      const _MAIN_MENU_LIST = [
        ['catalog', 'Каталог'],
        ['shops', 'Магазины'],
        ['contacts', 'Контакты'],
        ['about', 'О нас'],
      ];
    each item in _MAIN_MENU_LIST
      -
        const [location, text] = item;
        const isCatalog = (location === 'catalog');
        let link = `${location}.html`;
      if location === $pageId
        - link = null;
      else if location === 'shops'
        - link = '#';
      li.col-12.col-lg-3(class=[
        'header-menu__item',
        isCatalog ? `header-menu__item--${location}` : null,
      ])
        a.header-menu__link(href=link)= text
        if isCatalog
          .header-menu__inner-wrapper
            +catalog-menu({
              modifier: 'header',
              order: [1, 2, 3, 4, 5, 6],
            })

mixin header-navigation()
  .header-navigation
    .header-navigation__list
      -
        const _MAIN_MENU_LIST = [
          ['catalog', 'Каталог'],
          ['shops', 'Магазины'],
          ['contacts', 'Контакты'],
          ['about', 'О нас'],
        ];
      each item in _MAIN_MENU_LIST
        -
          const [location, text] = item;
          const isCatalog = (location === 'catalog');
          let link = `${location}.html`;
        if location === $pageId
          - link = null;
        else if location === 'shops'
          - link = '#';
        li(class=[
          'header-navigation__item',
          isCatalog ? `header-navigation__item--${location}` : null,
        ])
          a.header-navigation__link(href=link)= text
          if isCatalog
            .header-navigation__inner-nest
              +catalog-menu({
                modifier: 'header',
                order: [1, 2, 3, 4, 5, 6],
              })

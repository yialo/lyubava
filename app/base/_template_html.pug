include _import_functions.pug

include ../global/data/_dt_common.pug
include ../global/data/_dt_pages.pug

block page-id

- const [$pageTitle, $pageHeading] = $PAGES[$pageId];

include _import_methods.pug
include _import_mixins.pug

doctype html
html(class='page', lang='ru')
  include ../global/head/_head.pug
  body(class=setModifiers('body', [$pageId]))
    .body__container
      header.body__header
        include ../components/capital/body-header/_body-header.pug
      main.body__main
        div(class=[setModifiers('body-main', [$pageId])])
          block body-main__Content
      footer.body__footer
        include ../components/capital/body-footer/_body-footer.pug
    include ../components/capital/body/_body__Scripts.pug
